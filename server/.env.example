# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=freepik_downloader

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# Freepik Credentials (for automation)
FREEPIK_EMAIL=your-freepik-email@example.com
FREEPIK_PASSWORD=your-freepik-password

# Chrome Driver Path
CHROMEDRIVER_PATH=path/to/your/chromedriver

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50000000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100